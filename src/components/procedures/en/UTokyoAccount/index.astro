---
import Important from "../../Important";
import Procedure from "./ChangeInitialPassword.astro";
import MFA from "./MFA.astro";

interface Props {
  part?: string;
  pageSlug?: string;
  system: string;
}

const { part, pageSlug, system = "UTokyo Account" } = Astro.props;

const importantProps: Parameters<typeof Important>[0] = {
  part,
  pageSlug,
  include: {
    type: "Task",
    heading: "Changing the initial password",
  },
  system,
  lang: "en",
};
---

{
  part === "important" ? (
    <Important {...importantProps}>
      <Procedure pageSlug={pageSlug} />
    </Important>
  ) : (
    <ul class="procedure">
      <Important {...importantProps}>
        <Procedure pageSlug={pageSlug} />
      </Important>
      <MFA />
    </ul>
  )
}
