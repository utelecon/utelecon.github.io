import Important from "../../../procedures/Important";
import Verify from "./Verify.astro";
import Procedure from "./ConfigureEmailPassword.astro";

interface Props {
  part?: string;
  pageSlug?: string;
  system: string;
}

const { part, pageSlug, system = "ECCS Cloud Email (Google Workspace)" } = Astro.props;

const importantProps: Parameters<typeof Important>[0] = {
  part,
  pageSlug,
  include: {
    type: "Task",
    heading: "Set your password and email address",
  },
  system,
  lang: "en",
};
---

{
  part === "important" ? (
    <Important {...importantProps}>
      <Procedure part={part} pageSlug={pageSlug} />
    </Important>
  ) : (
    <ul class="procedure">
      <Important {...importantProps}>
        <Procedure part={part} pageSlug={pageSlug} />
      </Important>
      <Verify />
    </ul>
  )
}
